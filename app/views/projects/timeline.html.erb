<% content_for :title, "参画期間タイムライン" %>

<div class="mb-8">
  <nav class="flex items-center gap-2 text-sm text-gray-500 mb-2">
    <%= link_to "案件一覧", projects_path, class: "hover:text-warm-400 transition-colors duration-200" %>
    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M9 18l6-6-6-6"/></svg>
    <span class="text-gray-300">タイムライン</span>
  </nav>
  <h1 class="font-display text-2xl font-bold text-white">参画期間タイムライン</h1>
</div>

<% if @timeline.empty? %>
  <div class="text-center py-20 bg-navy-900/40 rounded-2xl border border-white/5">
    <svg class="w-12 h-12 mx-auto mb-4 text-gray-600" fill="none" stroke="currentColor" stroke-width="1" viewBox="0 0 24 24">
      <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
    </svg>
    <p class="text-gray-500 mb-4">案件がありません</p>
    <%= link_to "案件を登録する", new_project_path, class: "text-sm text-warm-400 hover:text-warm-300 transition-colors duration-200" %>
  </div>
<% else %>
  <div class="bg-navy-900/40 rounded-2xl border border-white/5 p-6 overflow-x-auto">
    <div style="min-width: 800px; position: relative;">

      <%# 凡例 %>
      <div class="flex items-center gap-5 mb-6">
        <div class="flex items-center gap-1.5">
          <div class="w-3 h-3 rounded-full" style="background-color: #34d399;"></div>
          <span class="text-xs text-gray-400">参画中</span>
        </div>
        <div class="flex items-center gap-1.5">
          <div class="w-3 h-3 rounded-full" style="background-color: #fbbf24;"></div>
          <span class="text-xs text-gray-400">参画前</span>
        </div>
        <div class="flex items-center gap-1.5">
          <div class="w-3 h-3 rounded-full" style="background-color: #6b7280;"></div>
          <span class="text-xs text-gray-400">終了</span>
        </div>
      </div>

      <%# 年月ラベル行 %>
      <div style="position: relative; height: 36px; margin-bottom: 4px;">
        <% @timeline.months.each do |month| %>
          <% current_month = month.year == Date.today.year && month.month == Date.today.month %>
          <div style="position: absolute; left: <%= @timeline.month_left_pct(month) %>%; transform: translateX(-50%); text-align: center;">
            <% if month.month == 1 || month == @timeline.timeline_start %>
              <div class="text-xs font-medium whitespace-nowrap <%= current_month ? 'text-red-400' : 'text-gray-400' %>"><%= month.year %>年</div>
            <% end %>
            <div class="text-xs whitespace-nowrap <%= current_month ? 'text-red-400 font-bold' : 'text-gray-600' %>"><%= month.month %>月</div>
          </div>
        <% end %>
      </div>

      <%# グリッドライン（月境界） %>
      <div style="position: relative; height: 1px; margin-bottom: 12px; background: rgba(255,255,255,0.05);">
        <% @timeline.months.each do |month| %>
          <div style="position: absolute; left: <%= @timeline.month_left_pct(month) %>%; top: 0; height: 6px; width: 1px; background: rgba(255,255,255,0.15);"></div>
        <% end %>
      </div>

      <%# 案件バー %>
      <% @timeline.projects.each do |project| %>
        <%
          bar_left  = @timeline.bar_left_pct(project)
          bar_width = [ @timeline.bar_width_pct(project), 0.5 ].max
          period    = "#{project.start_date.strftime('%Y/%m/%d')} 〜 #{project.end_date&.strftime('%Y/%m/%d') || '継続中'}"
        %>
        <div style="position: relative; height: 40px; margin-bottom: 8px;">
          <%= link_to project_path(project),
                title: "#{project.name} | #{period}",
                style: "position: absolute; top: 4px; height: 32px; left: #{bar_left}%; width: #{bar_width}%; background-color: #{timeline_bar_color(project)};",
                class: "flex items-center gap-1.5 px-3 rounded-full text-xs font-semibold text-navy-950 truncate opacity-85 hover:opacity-100 transition-opacity duration-200" do %>
            <span class="truncate"><%= project.name %></span>
            <% if project.end_date.nil? %>
              <span class="shrink-0 opacity-60">›</span>
            <% end %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
<% end %>
