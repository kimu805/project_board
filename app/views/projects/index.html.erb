<% content_for :title, "案件一覧" %>

<div data-controller="client-toggle">
<%# Page Header %>
<div class="flex flex-col sm:flex-row justify-between items-start sm:items-end gap-4 mb-10">
  <div>
    <p class="text-xs font-display tracking-widest text-warm-500 uppercase mb-2">Dashboard</p>
    <h1 class="font-display font-extrabold text-3xl sm:text-4xl text-white leading-tight">案件一覧</h1>
  </div>
  <div class="flex items-center gap-6">
    <div class="hidden sm:flex items-center gap-4 text-xs text-gray-500">
      <span class="flex items-center gap-1.5"><span class="w-2 h-2 rounded-full bg-emerald-400"></span>参画中</span>
      <span class="flex items-center gap-1.5"><span class="w-2 h-2 rounded-full bg-amber-400"></span>参画前</span>
      <span class="flex items-center gap-1.5"><span class="w-2 h-2 rounded-full bg-gray-500"></span>終了</span>
    </div>
    <button type="button" data-action="client-toggle#toggle" data-client-toggle-target="toggleButton" class="inline-flex items-center gap-1.5 px-3 py-2 rounded-lg border border-white/10 text-xs text-gray-400 hover:text-white hover:border-white/20 transition-colors cursor-pointer" title="企業名の表示/非表示を切り替え">
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
      <span>企業名</span>
    </button>
    <%= link_to new_project_path, class: "inline-flex items-center gap-2 px-5 py-2.5 bg-warm-500 hover:bg-warm-400 text-navy-950 font-display font-bold text-sm rounded-xl shadow-lg shadow-warm-500/25 hover:shadow-warm-400/30 transition-all duration-200 hover:-translate-y-0.5" do %>
      <span class="text-lg leading-none">+</span>
      <span>新規登録</span>
    <% end %>
  </div>
</div>

<%# Search / Filter Form %>
<div class="bg-navy-900 border border-white/5 rounded-2xl p-5 mb-8">
  <%= form_with url: projects_path, method: :get, class: "flex flex-col gap-4" do |f| %>
    <%# Keyword %>
    <div class="relative">
      <div class="pointer-events-none absolute inset-y-0 left-3 flex items-center">
        <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M21 21l-4.35-4.35M17 11A6 6 0 1 1 5 11a6 6 0 0 1 12 0z"/></svg>
      </div>
      <%= f.text_field :keyword, value: params[:keyword], placeholder: "案件名・クライアント名で検索", class: "w-full bg-navy-950 border border-white/10 rounded-xl pl-9 pr-4 py-2.5 text-sm text-white placeholder-gray-600 focus:outline-none focus:border-warm-500/50 focus:ring-1 focus:ring-warm-500/30 transition-colors" %>
    </div>

    <%# Select filters + price range %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
      <%# Status %>
      <div>
        <%= f.select :status,
          [["すべてのステータス", ""]] + status_options,
          { selected: params[:status] },
          class: "w-full bg-navy-950 border border-white/10 rounded-xl px-3 py-2.5 text-sm text-white focus:outline-none focus:border-warm-500/50 focus:ring-1 focus:ring-warm-500/30 transition-colors" %>
      </div>

      <%# Work style %>
      <div>
        <%= f.select :work_style,
          [["すべての勤務形態", ""]] + work_style_options,
          { selected: params[:work_style] },
          class: "w-full bg-navy-950 border border-white/10 rounded-xl px-3 py-2.5 text-sm text-white focus:outline-none focus:border-warm-500/50 focus:ring-1 focus:ring-warm-500/30 transition-colors" %>
      </div>

      <%# Min price %>
      <div class="relative">
        <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-gray-500 text-sm">¥</span>
        <%= f.number_field :min_price, value: params[:min_price], placeholder: "単価（下限）", min: 0, step: 10000, class: "w-full bg-navy-950 border border-white/10 rounded-xl pl-7 pr-4 py-2.5 text-sm text-white placeholder-gray-600 focus:outline-none focus:border-warm-500/50 focus:ring-1 focus:ring-warm-500/30 transition-colors" %>
      </div>

      <%# Max price %>
      <div class="relative">
        <span class="pointer-events-none absolute inset-y-0 left-3 flex items-center text-gray-500 text-sm">¥</span>
        <%= f.number_field :max_price, value: params[:max_price], placeholder: "単価（上限）", min: 0, step: 10000, class: "w-full bg-navy-950 border border-white/10 rounded-xl pl-7 pr-4 py-2.5 text-sm text-white placeholder-gray-600 focus:outline-none focus:border-warm-500/50 focus:ring-1 focus:ring-warm-500/30 transition-colors" %>
      </div>
    </div>

    <%# Buttons %>
    <div class="flex items-center gap-3">
      <%= f.submit "絞り込む", class: "px-5 py-2 bg-warm-500 hover:bg-warm-400 text-navy-950 font-display font-bold text-sm rounded-xl transition-colors cursor-pointer" %>
      <% if @filtering %>
        <%= link_to "クリア", projects_path, class: "px-4 py-2 text-sm text-gray-400 hover:text-white border border-white/10 hover:border-white/20 rounded-xl transition-colors" %>
        <span class="text-xs text-gray-500"><%= @projects.count %>件 ヒット</span>
      <% end %>
    </div>
  <% end %>
</div>

<% if @projects.any? %>
  <%# Stats Bar %>
  <div class="grid grid-cols-3 gap-px bg-white/5 rounded-2xl overflow-hidden mb-8">
    <% [["参画中", @projects.select(&:active?).size, "emerald"], ["参画前", @projects.select(&:upcoming?).size, "amber"], ["終了", @projects.select(&:completed?).size, "gray"]].each do |label, count, color| %>
      <div class="bg-navy-900 p-5">
        <p class="text-xs text-gray-500 mb-1"><%= label %></p>
        <p class="font-display font-bold text-2xl text-<%= color %>-400"><%= count %></p>
      </div>
    <% end %>
  </div>

  <%# Project List %>
  <div class="space-y-3">
    <% @projects.each_with_index do |project, i| %>
      <div class="group relative bg-navy-900 border border-white/5 rounded-2xl p-5 sm:p-6 hover:border-white/10 hover:bg-navy-800 transition-all duration-300">
        <%# Status indicator line %>
        <div class="absolute left-0 top-5 bottom-5 w-0.5 rounded-full <%= status_indicator_class(project) %>"></div>

        <div class="flex flex-col sm:flex-row sm:items-center gap-4 pl-4">
          <%# Main content %>
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-3 mb-2">
              <%= link_to project.name, project, class: "font-display font-bold text-lg text-white group-hover:text-warm-400 transition-colors duration-200 truncate" %>
              <span class="shrink-0 text-[11px] font-medium tracking-wide uppercase <%= status_text_class(project) %>"><%= status_label(project) %></span>
            </div>

            <div class="flex flex-wrap items-center gap-x-5 gap-y-2 text-sm">
              <span class="text-gray-400 hidden" data-client-toggle-target="clientName"><%= project.client_name %></span>
              <span class="text-white font-display font-bold"><%= formatted_unit_price(project.unit_price) %></span>
              <span class="inline-flex items-center gap-1 text-gray-500">
                <%= work_style_icon(project) %>
                <span><%= work_style_label(project) %></span>
              </span>
              <span class="text-gray-600"><%= project.start_date %> — <%= project.end_date || "現在" %></span>
            </div>

            <% if project.tech_stack.present? %>
              <div class="mt-3 flex flex-wrap gap-1.5">
                <% project.tech_stack.split(",").each do |tech| %>
                  <span class="text-[11px] px-2 py-0.5 rounded-md bg-white/5 text-gray-400 border border-white/5"><%= tech.strip %></span>
                <% end %>
              </div>
            <% end %>
          </div>

          <%# Actions %>
          <div class="flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200 shrink-0">
            <%= link_to project, class: "p-2 rounded-lg text-gray-500 hover:text-white hover:bg-white/5 transition-colors", title: "詳細" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
            <% end %>
            <%= link_to edit_project_path(project), class: "p-2 rounded-lg text-gray-500 hover:text-warm-400 hover:bg-warm-500/10 transition-colors", title: "編集" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
            <% end %>
            <%= button_to project, method: :delete, class: "p-2 rounded-lg text-gray-500 hover:text-red-400 hover:bg-red-500/10 transition-colors cursor-pointer", title: "削除", form: { data: { turbo_confirm: "「#{project.name}」を削除しますか？" } } do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<% elsif @filtering %>
  <div class="bg-navy-900 border border-white/5 rounded-2xl p-16 text-center">
    <div class="w-16 h-16 bg-white/5 rounded-2xl flex items-center justify-center mx-auto mb-5">
      <svg class="w-7 h-7 text-gray-600" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path d="M21 21l-4.35-4.35M17 11A6 6 0 1 1 5 11a6 6 0 0 1 12 0z"/></svg>
    </div>
    <p class="text-gray-500 mb-6 font-display">絞り込み条件に一致する案件がありません</p>
    <%= link_to "条件をクリアする", projects_path, class: "inline-flex items-center gap-2 text-warm-400 hover:text-warm-300 font-display font-bold transition-colors" %>
  </div>

<% else %>
  <div class="bg-navy-900 border border-white/5 rounded-2xl p-16 text-center">
    <div class="w-16 h-16 bg-white/5 rounded-2xl flex items-center justify-center mx-auto mb-5">
      <svg class="w-7 h-7 text-gray-600" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
    </div>
    <p class="text-gray-500 mb-6 font-display">案件が登録されていません</p>
    <%= link_to new_project_path, class: "inline-flex items-center gap-2 text-warm-400 hover:text-warm-300 font-display font-bold transition-colors" do %>
      <span>最初の案件を登録する</span>
      <span>&rarr;</span>
    <% end %>
  </div>
<% end %>
</div>
